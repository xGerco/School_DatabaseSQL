CREATE DATABASE EscuelaDB;
GO
USE EscuelaDB;
GO
CREATE TABLE Grado(
	IDGrado VARCHAR(2) PRIMARY KEY NOT NULL,
	Grado VARCHAR(50) NOT NULL
);
GO
CREATE TABLE Alumnos(
	IDAlumno INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Nombre VARCHAR(50) NOT NULL,
	Apellido VARCHAR(50) NOT NULL,
	Grado VARCHAR(2) FOREIGN KEY REFERENCES Grado(IDGRado) NOT NULL,
	Edad INT NOT NULL,
	Email VARCHAR(50) ,
);
GO
CREATE TABLE Docentes(
	IDdocente INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Nombre VARCHAR(50),
	Apellido VARCHAR(50)
);
GO
CREATE TABLE Curso(
	IDCurso VARCHAR(3) PRIMARY KEY NOT NULL,
	Curso VARCHAR(50),
	Docente INT FOREIGN KEY REFERENCES Docentes(IDdocente)
);
GO
CREATE TABLE Modulo(
	IDModulo INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Modulo VARCHAR(50) NOT NULL
);
GO
CREATE TABLE Parcial1(
	IDParcial1 INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Alumno INT FOREIGN KEY REFERENCES Alumnos(IDAlumno) NOT NULL,
	Grado VARCHAR(2) FOREIGN KEY REFERENCES Grado(IDGrado) NOT NULL,
	Curso VARCHAR(3) FOREIGN KEY REFERENCES Curso(IDCurso) NOT NULL,
	Modulo INT FOREIGN KEY REFERENCES Modulo(IDModulo) NOT NULL,
	Nota DECIMAL NOT NULL
);
GO
CREATE TABLE Parcial2(
	IDParcial2 INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Alumno INT FOREIGN KEY REFERENCES Alumnos(IDAlumno) NOT NULL,
	Grado VARCHAR(2) FOREIGN KEY REFERENCES Grado(IDGrado) NOT NULL,
	Curso VARCHAR(3) FOREIGN KEY REFERENCES Curso(IDCurso) NOT NULL,
	Modulo INT FOREIGN KEY REFERENCES Modulo(IDModulo) NOT NULL,
	Nota DECIMAL NOT NULL
);
GO
CREATE TABLE Parcial3(
	IDParcial3 INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Alumno INT FOREIGN KEY REFERENCES Alumnos(IDAlumno) NOT NULL,
	Grado VARCHAR(2) FOREIGN KEY REFERENCES Grado(IDGrado) NOT NULL,
	Curso VARCHAR(3) FOREIGN KEY REFERENCES Curso(IDCurso) NOT NULL,
	Modulo INT FOREIGN KEY REFERENCES Modulo(IDModulo) NOT NULL,
	Nota DECIMAL NOT NULL
);
GO
CREATE TABLE Parcial4(
	IDParcial4 INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	Alumno INT FOREIGN KEY REFERENCES Alumnos(IDAlumno) NOT NULL,
	Grado VARCHAR(2) FOREIGN KEY REFERENCES Grado(IDGrado) NOT NULL,
	Curso VARCHAR(3) FOREIGN KEY REFERENCES Curso(IDCurso) NOT NULL,
	Modulo INT FOREIGN KEY REFERENCES Modulo(IDModulo) NOT NULL,
	Nota DECIMAL NOT NULL
);
GO
CREATE TABLE GradosCursos(
	IDCoincidencia INT PRIMARY KEY IDENTITY(1,1) NOT NULL,
	
);
